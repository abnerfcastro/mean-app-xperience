doctype
html(lang="en-US", ng-app="quotes.core")
    head
        meta(charset="uft-8")
        title= title

        //- Bootstrap CDN
        link(href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css", type="text/css" rel="stylesheet")
        

        //- Custom css file for the website
        link(rel="stylesheet", type="text/css", href="/css/style.css")
		
    body(ng-controller="QuotesCtrl as vm")
        block content

        //- jQuery CDN
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js")

        //- Bootstrap JS CDN files
        script(src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js", type="text/javascript")
        
        //- Angular CDN
        script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.3/angular.min.js")

        //- Custom Angular files
        script(src="app.js")